<!DOCTYPE html>
<html lang="en">
 <head>
     <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.4.3/css/aui.css" media="all">
     <script src="//localhost:2990/jira/atlassian-connect/all.js" type="text/javascript"></script>
     $webResourceManager.requireResourcesForContext("laboratory")
 </head>
 <body>
    <section id="content" class="ac-content">
        <div class="aui-tabs vertical-tabs" id="vertical">
            <ul class="tabs-menu">
                <li class="menu-item">
                    <a href="#tab-A"><strong>A</strong></a>
                </li>
                <li class="menu-item active-tab">
                    <a href="#tab-B"><strong>B</strong></a>
                </li>
                <li class="menu-item">
                    <a href="#tab-C"><strong>C</strong></a>
                </li>
            </ul>
            <div class="tabs-pane" id="tab-A">
                <h2>1 tab</h2>
                <p>Some text</p>
            </div>
            <div class="tabs-pane active-pane" id="tab-B">
                <script>
                    new AJS.RestfulTable({
                        autoFocus: true,
                        el: jQuery("#laboratory-records-table"),
                        allowReorder: true,
                        resources: {
                            all: AJS.contextPath()+"rest/laboratory/1.0/records",
                            self: AJS.contextPath()+"rest/laboratory/1.0/records"
                        },
                        columns: [
                            {
                                id: "text",
                                header: "text"
                            },
                            {
                                id: "date",
                                header: "date"
                            }
                        ]
                    });
                </script>
                <table id="laboratory-records-table"></table>
            </div>
            <div class="tabs-pane" id="tab-C">
                <h2>3 tab</h2>
                <p>Some text</p>
            </div>
        </div>
        <!-- // .aui-tabs -->
    </section>
 </body>
</html>