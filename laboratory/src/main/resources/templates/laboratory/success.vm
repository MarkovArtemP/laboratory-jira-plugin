<!DOCTYPE html>
<html lang="en">
 <head>
     <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.4.3/css/aui.css" media="all">
     <script src="//localhost:2990/jira/atlassian-connect/all.js" type="text/javascript"></script>
 </head>
 <body>
    <section id="content" class="ac-content">
        <div class="aui-tabs vertical-tabs" id="vertical">
            <ul class="tabs-menu">
                <li class="menu-item">
                    <a href="#tab-A"><strong>A</strong></a>
                </li>
                <li class="menu-item active-tab">
                    <a href="#tab-B"><strong>B</strong></a>
                </li>
                <li class="menu-item">
                    <a href="#tab-C"><strong>C</strong></a>
                </li>
            </ul>
            <div class="tabs-pane" id="tab-A">
                <h2>1 tab</h2>
                <p>Some text</p>
            </div>
            <div class="tabs-pane active-pane" id="tab-B">
                <form action="/secure/LaboratoryAction!add.jspa">
                    <label for="text">Text: </label>
                    <input type="text" name="text" id="text" placeholder="Some text" required/>
                    <label for="date">Date: </label>
                    <input type="date" name="date" id="date" placeholder="dd.MM.yyyy" required/>
                    <input type="submit" value="OK"/>
                </form>
                <table>
                    <thead>
                        <th>text</th>
                        <th>date</th>
                    </thead>
                    <tbody>
                    #foreach($record in $records)
                        <tr>
                            <td>$record.getText()</td>
                            <td>$record.getDate()</td>
                        </tr>
                    #end
                    </tbody>
                </table>
            </div>
            <div class="tabs-pane" id="tab-C">
                <h2>3 tab</h2>
                <p>Some text</p>
            </div>
        </div>
        <!-- // .aui-tabs -->
    </section>
 </body>
</html>